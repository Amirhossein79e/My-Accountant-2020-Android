<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp162"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardCornerRadius="@dimen/dp8"
        android:id="@+id/recycler_item"
        android:layout_margin="@dimen/dp8"
        app:cardElevation="@dimen/dp8">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/card_background"
            android:padding="@dimen/dp8"
            android:orientation="vertical">


            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txt_myDate_ch"
                android:text="hello"
                android:textColor="@color/md_white_1000"
                android:textSize="@dimen/sp18"
                android:fontFamily="@font/yekan"
                android:layout_alignParentLeft="true"
                android:layout_below="@id/txt_cash_ch"
                app:fontFamily="@font/yekan">
            </androidx.appcompat.widget.AppCompatTextView>

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="hello"
                android:id="@+id/txt_cash_ch"
                android:textColor="@color/md_white_1000"
                android:textSize="@dimen/sp18"
                android:fontFamily="@font/yekan"
                android:layout_alignParentLeft="true"
                app:fontFamily="@font/yekan">
            </androidx.appcompat.widget.AppCompatTextView>

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="hello"
                android:id="@+id/txt_account_ch"
                android:textColor="@color/md_white_1000"
                android:textSize="@dimen/sp18"
                android:fontFamily="@font/yekan"
                android:layout_below="@id/txt_myDate_ch"
                android:layout_alignParentLeft="true"
                app:fontFamily="@font/yekan">
            </androidx.appcompat.widget.AppCompatTextView>

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="hello"
                android:id="@+id/txt_name_ch"
                android:textColor="@color/md_white_1000"
                android:textSize="@dimen/sp18"
                android:fontFamily="@font/yekan"
                android:layout_alignParentLeft="true"
                android:layout_below="@id/txt_account_ch"
                app:fontFamily="@font/yekan">
            </androidx.appcompat.widget.AppCompatTextView>

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/cheque">
            </androidx.appcompat.widget.AppCompatImageView>


        </RelativeLayout>

    </androidx.cardview.widget.CardView>


</LinearLayout>